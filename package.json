{
  "name": "operix-service-api",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "type": "module",
  "engines": {
    "bun": ">=1.3.9"
  },
  "scripts": {
    "database": "docker compose up -d --build",
    "migrate": "bunx sequelize-cli db:migrate",
    "seed": "bunx sequelize-cli db:seed:all",
    "dev": "bun run --watch src/server.ts",
    "start": "bun run src/server.ts",
    "swagger": "bun swagger.ts",
    "test": "bun test",
    "clean": "rm -rf dist && echo 'Done.'",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "build": "bun build ./src/app.ts --outdir ./dist --target bun",
    "start-from-build": "bun dist/server.js"
  },
  "author": "Jo√£o Pedro Pereira Lima",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1693.0",
    "bcrypt": "^5.1.1",
