    "core-js": "^3.48.0",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.3",
    "mock-aws-s3": "^4.0.2",
    "moment": "^2.30.1",
    "nock": "^14.0.11",
    "pg": "^8.18.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.4",
