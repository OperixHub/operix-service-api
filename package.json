    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "bun-types": "^1.3.10",
    "eslint": "^10.0.0",
    "jest": "^30.2.0",
    "sequelize-cli": "^6.6.5",
    "supertest": "^7.2.2",
